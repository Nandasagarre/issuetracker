<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>ITrcaker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/428cf22b52.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body style="background-color: #eae0da;">
    <header style="background-color: #a0c3d2;">
      <nav
        class="navbar navbar-expand-lg navbar-light border border-bottom-1 shadow-lg p-1 mb-2 rounded"
      >
        <div class="container-fluid">
          <a class="navbar-brand" href="#">I-Traker</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse"
            id="navbarSupportedContent"
            style="margin-left: 10vw;"
          >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/create"
                  >Projects</a
                >
              </li>
            </ul>

            <form class="d-flex" method="get">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search by Author"
                aria-label="Search"
                name="author"
              />
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search with tag/labes and click search"
                aria-label="Search"
                name="search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
          </div>
        </div>
      </nav>
    </header>
    <script>
      function routeToCreateBug() {
        console.log("handled");
        window.location = window.location.href.split("?")[0] + "/createbug";
      }

      function handleReload() {
        let uri = window.location.href.split("?")[0];
        console.log(uri);
        window.location = uri;
        // location.reload();
      }
    </script>

    <style>
      .side {
        background-color: #f7f5eb;
        display: inline-block;
        width: 20vw;
        height: 65vh;
      }
      .issue-list {
        margin-left: 5px;
        position: absolute;
        display: inline;
        width: 70vw;
        background-color: #dfd3c3;
      }
      .detail-bug {
        background-color: #f8f4ea;
      }
    </style>
    <div class="side text-center">
      <button
        style="background-color: #eac7c7;"
        class="btn"
        onclick="routeToCreateBug()"
      >
        Create Bug
      </button>

      <%if(pdeatils) {%>
      <div class="detail-item">
        <p>Project: <%= pdeatils.pname %> by <%= pdeatils.pauthor %></p>

        <div>Desc: <%= pdeatils.pdesc %></div>
      </div>
      <% } %>
      <button
        onclick="handleReload()"
        style="background-color: #eac7c7;"
        class="btn"
      >
        Refresh
      </button>
    </div>

    <div class="issue-list">
      <%if(bugs) {%> <% bugs.forEach((b) =>{ %>

      <div class="detail-bug m-1">
        <div class="ms-4">
          <div>Issue: <%= b.bname %> by <%= b.bauthor %></div>
          <div>Tags: <%= b.tag %></div>
          <div>Desc: <%= b.bdesc %></div>
        </div>
      </div>
      <% })%> <% } %>
    </div>

    <%- include('footer.ejs') %>
  </body>
</html>
